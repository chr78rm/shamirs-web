<?xml version="1.0" encoding="UTF-8"?>
<TraceConfig xmlns="http://www.christofreichardt.de/java/tracer">
    <Pool>
        <TraceLogger name="TestTracer" class="de.christofreichardt.diagnosis.file.FileTracer">
            <LogDir>./log/</LogDir>
            <AutoFlush>true</AutoFlush>
            <BufSize>1024</BufSize>
            <Limit>4194304</Limit>
            <Context>
                <Thread name="main">
                    <Online>true</Online>
                    <DebugLevel>10</DebugLevel>
                </Thread>
            </Context>
        </TraceLogger>
        <TraceLogger name="SessionSanitizer" class="de.christofreichardt.diagnosis.file.FileTracer">
            <LogDir>./log/</LogDir>
            <AutoFlush>true</AutoFlush>
            <BufSize>1024</BufSize>
            <Limit>4194304</Limit>
            <Context>
                <Thread name="scheduling-1">
                    <Online>true</Online>
                    <DebugLevel>10</DebugLevel>
                </Thread>
            </Context>
        </TraceLogger>
        <TraceLogger name="ExecutorService" class="de.christofreichardt.diagnosis.file.FileTracer">
            <LogDir>./log/</LogDir>
            <AutoFlush>true</AutoFlush>
            <BufSize>1024</BufSize>
            <Limit>4194304</Limit>
            <Context>
                <Thread name="executing-1">
                    <Online>true</Online>
                    <DebugLevel>10</DebugLevel>
                </Thread>
            </Context>
        </TraceLogger>
    </Pool>
    <Map>
        <Threads>
            <Thread name="main">
                <TraceLogger ref="TestTracer" />
            </Thread>
            <Thread name="scheduling-1">
                <TraceLogger ref="SessionSanitizer" />
            </Thread>
            <Thread name="executing-1">
                <TraceLogger ref="ExecutorService" />
            </Thread>
        </Threads>
    </Map>
    <Queue>
        <Enabled />
        <Size>3</Size>
        <TraceLogger name="shamirs-web-tracer-"
                     class="de.christofreichardt.diagnosis.file.QueueFileTracer">
            <LogDir>./log</LogDir>
            <AutoFlush>true</AutoFlush>
            <BufSize>1024</BufSize>
            <Limit>4194304</Limit>
        </TraceLogger>
        <Online>true</Online>
        <DebugLevel>5</DebugLevel>
    </Queue>
</TraceConfig>
